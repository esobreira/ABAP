form relatorio_conferencia.

  ws_layout-colwidth_optimize = 'X'.

  call function 'REUSE_ALV_GRID_DISPLAY'
   exporting
     i_callback_program                = sy-repid
     it_fieldcat                       = it_fcat
     is_layout                         = ws_layout
    tables
      t_outtab                          = it_conferencia
   exceptions
     program_error                     = 1
     others                            = 2.
            .
  if sy-subrc <> 0.
* Implement suitable error handling here
  endif.

endform.
